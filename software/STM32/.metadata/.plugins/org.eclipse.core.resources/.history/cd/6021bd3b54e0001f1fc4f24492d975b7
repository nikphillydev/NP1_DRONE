#pragma once

#include <cstdint>

class IIRFilter
{
	/*
	 * Class to implement a first-order IIR low-pass filter
	 */
public:
	IIRFilter(int cutoff_frequency, int sampling_frequency);

	float update();

private:
	uint32_t cutoff_frequency;
	uint32_t sampling_frequency;
	float
};


